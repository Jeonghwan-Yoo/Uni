<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5"> 
    <description>JSPBOOK Examples.</description>
    <display-name>JSPBOOK Examples</display-name>
    
    <resource-ref>
		<description>MYSQL POOL</description>
		<res-ref-name>jdbc/mysql</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
    </resource-ref>
	
	<servlet>
		<servlet-name>haeggul</servlet-name>
		<servlet-class>Project.haeggul</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>haeggul</servlet-name>
		<url-pattern>/haeggul</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>africa_arabia.html</welcome-file>
		<welcome-file>asia_oceania.html</welcome-file>
		<welcome-file>europe.html</welcome-file>
		<welcome-file>americas.html</welcome-file>
	</welcome-file-list>


</web-app>

